{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "shell:default",
    "shell:allow-execute",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": false,
          "cmd": "",
          "name": "bin/api/main"
        }
      ]
    },
    {
      "identifier": "core:default",
      "allow": [
        {
          "url": "http://**/"
        },
        {
          "url": "https://**/"
        }
      ]
    }
  ]
}